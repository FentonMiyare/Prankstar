{
	"compilerOptions": {
		"baseUrl": "./src/",
		"checkJs": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"paths": {
			"@app/*": ["./app/*"],
			"@components/*": ["./components/*"],
			"@hooks/*": ["./hooks/*"],
			"@features/*": ["./features/*"],
			"@pages/*": ["./pages/*"],
			"@assets/*": ["./assets/*"],
			"@styles/*": ["./styles/*"],
			"@config/*": ["./config/*"]
		}
	},
	"include": ["src", "types"]
	// "references": [{ "path": "./jsconfig.node.json" }]
}

